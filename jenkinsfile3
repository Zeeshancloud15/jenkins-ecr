pipeline {
    agent any

    environment {
        AWS_REGION = "ap-south-1"
        ECR_REPO = "123456789012.dkr.ecr.ap-south-1.amazonaws.com/myapp"
        REMOTE_HOST = "98.94.32.42"
        REMOTE_USER = "zeeshan"
    }

    stages {

        stage('Clone Code') {
            steps {
                git 'https://github.com/Zeeshancloud15/jenkins-ecr.git'
            }
        }

        stage('Build App') {
            steps {
                sh 'echo "Building application..."'
            }
        }

        stage('Test App') {
            steps {
                sh 'echo "Running tests..."'
            }
        }

        stage('Docker Build') {
            steps {
                sh 'docker build -t myapp .'
            }
        }

        stage('Login to AWS ECR') {
            steps {
                withCredentials([[
                    $class: 'AmazonWebServicesCredentialsBinding',
                    credentialsId: 'aws-ecr-creds01'
                ]]) {
                    sh '''
                    aws ecr get-login-password --region $AWS_REGION | \
                    docker login --username AWS --password-stdin $ECR_REPO
                    '''
                }
            }
        }

        stage('Push Image to ECR') {
            steps {
                sh '''
                docker tag myapp:latest $ECR_REPO:latest
                docker push $ECR_REPO:latest
                '''
            }
        }

        stage('Deploy on Remote Server') {
            steps {
                sshagent(['zeeshan-ssh-key']) {
                    sh '''
                    ssh -o StrictHostKeyChecking=no $REMOTE_USER@$REMOTE_HOST "
                        docker pull $ECR_REPO:latest &&
                        docker rm -f myapp || true &&
                        docker run -d -p 80:80 --name myapp $ECR_REPO:latest
                    "
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "✅ Deployment Successful"
        }
        failure {
            echo "❌ Deployment Failed"
        }
    }
}
