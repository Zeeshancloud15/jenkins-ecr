pipeline {
    agent any

    environment {
        REMOTE_HOST = "98.94.32.42"   // Your remote server IP
        REMOTE_USER = "zeeshan"       // Remote user
        APP_NAME = "myapp"
    }

    stages {
        stage('Build App') {
            steps {
                echo "Building application..."
                sh 'echo "This is where your app build commands go"'
            }
        }

        stage('Test App') {
            steps {
                echo "Running tests..."
                sh 'echo "This is where your test commands go"'
            }
        }

        stage('Docker Build') {
            steps {
                echo "Building Docker image..."
                sh 'docker build -t myapp .'
            }
        }

        stage('Deploy on Remote Server') {
            steps {
                sshagent(['zeeshan-ssh-key']) { // Your SSH key credential
                    sh """
                    ssh -o StrictHostKeyChecking=no $REMOTE_USER@$REMOTE_HOST '
                        docker rm -f $APP_NAME || true &&
                        docker run -d -p 80:80 --name $APP_NAME $APP_NAME:latest
                    '
                    """
                }
            }
        }
    }

    post {
        success {
            echo "✅ Deployment Successful"
        }
        failure {
            echo "❌ Deployment Failed"
        }
    }
}
