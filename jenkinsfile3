pipeline {
    agent any

    environment {
        AWS_REGION = "us-east-1"
        ECR_REPO   = "189598237274.dkr.ecr.us-east-1.amazonaws.com/zeeshan-agency"
        IMAGE_TAG  = "${env.BUILD_NUMBER}"
        REMOTE_USER = "zeeshan"
        REMOTE_IP   = "172.31.19.57"
        CONTAINER_NAME = "app_${env.BUILD_NUMBER}"
    }

    stages {
        stage('Clone Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/zeeshaan02/jenkins-ecr.git'
            }
        }

        stage('Login to AWS ECR') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'aws-ecr-creds02', 
                                                  usernameVariable: 'AWS_ACCESS_KEY_ID', 
                                                  passwordVariable: 'AWS_SECRET_ACCESS_KEY')]) {
                    sh """
                    aws ecr get-login-password --region $AWS_REGION | docker login --username AWS --password-stdin $ECR_REPO
                    """
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                sh """
                docker build -t zeeshan-app .
                docker tag zeeshan-app:latest $ECR_REPO:$IMAGE_TAG
                """
            }
        }

        stage('Push Docker Image to ECR') {
            steps {
                sh "docker push $ECR_REPO:$IMAGE_TAG"
            }
        }

        stage('Deploy on Remote Server') {
            steps {
                sshagent(['remote-ssh-creds']) {
                    sh """
                    ssh -o StrictHostKeyChecking=no $REMOTE_USER@$REMOTE_IP << EOF
                        docker pull $ECR_REPO:$IMAGE_TAG
                        docker stop $CONTAINER_NAME || true
                        docker rm $CONTAINER_NAME || true
                        docker run -d -p 5000:5000 --name $CONTAINER_NAME $ECR_REPO:$IMAGE_TAG
EOF
                    """
                }
            }
        }
    }

    post {
        success {
            echo "✅ Deployment successful on $REMOTE_IP!"
        }
        failure {
            echo "❌ Deployment failed!"
        }
    }
}
