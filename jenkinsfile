pipeline {
    agent any

    environment {
        AWS_REGION = "us-east-1"
        ECR_REPO = "189598237274.dkr.ecr.us-east-1.amazonaws.com/zeeshan.agency"
        IMAGE_TAG = "latest"
        EC2_USER = "ubuntu"
        EC2_IP = "3.235.188.77"           // Public IP for SSH
        SSH_KEY = "/var/lib/jenkins/.ssh/your-key.pem"  // Private key path
    }

    stages {

        stage('Clone Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/zeeshaan02/jenkins-ecr.git'
            }
        }

        stage('Login to AWS ECR') {
            steps {
                sh """
                aws ecr get-login-password --region $AWS_REGION \
                | docker login --username AWS --password-stdin $ECR_REPO
                """
            }
        }

        stage('Build Docker Image') {
            steps {
                sh """
                docker build -t zeeshan-app .
                docker tag zeeshan-app:latest $ECR_REPO:$IMAGE_TAG
                """
            }
        }

        stage('Push Image to ECR') {
            steps {
                sh """
                docker push $ECR_REPO:$IMAGE_TAG
                """
            }
        }

        stage('Deploy on EC2') {
            steps {
                sh """
                ssh -i $SSH_KEY -o StrictHostKeyChecking=no $EC2_USER@$EC2_IP << 'EOF'
                    sudo docker pull $ECR_REPO:$IMAGE_TAG
                    sudo docker stop app || true
                    sudo docker rm app || true
                    sudo docker run -d -p 5000:5000 --name app $ECR_REPO:$IMAGE_TAG
                EOF
                """
            }
        }
    }
}
