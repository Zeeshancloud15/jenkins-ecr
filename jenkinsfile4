pipeline {
    agent any

    environment {
        GREEN_SERVER_IP = '98.93.30.214'
        BLUE_SERVER_IP  = '54.242.239.106'
    }

    stages {

        stage('Checkout SCM') {
            steps {
                checkout([$class: 'GitSCM', 
                    branches: [[name: 'main']],
                    userRemoteConfigs: [[
                        url: 'https://github.com/Zeeshancloud15/jenkins-ecr.git',
                        credentialsId: 'ecr:us-east-1:blue-green-ssh1'
                    ]]
                ])
            }
        }

        stage('Deploy to Green') {
            steps {
                sshagent(['blue-green-ssh']) {
                    sh """
                    # Copy files to Green server
                    scp -o StrictHostKeyChecking=no index.html jenkins@${GREEN_SERVER_IP}:/var/www/html/
                    # Restart web service on Green server
                    ssh -o StrictHostKeyChecking=no jenkins@${GREEN_SERVER_IP} 'sudo systemctl restart httpd'
                    """
                }
            }
        }

        stage('Health Check') {
            steps {
                script {
                    def status = sh(script: "curl -s -o /dev/null -w '%{http_code}' http://${GREEN_SERVER_IP}", returnStdout: true).trim()
                    if (status != '200') {
                        error "Health check failed! Status: ${status}"
                    } else {
                        echo "Green server is healthy ✅"
                    }
                }
            }
        }

        stage('Switch Traffic') {
            steps {
                sshagent(['blue-green-ssh1']) {
                    sh """
                    # Example: Switching traffic to Green server
                    echo "Traffic switched to Green server (${GREEN_SERVER_IP}) ✅"
                    # If using ELB, you can replace with aws elbv2 modify-listener commands
                    """
                }
            }
        }
    }

    post {
        failure {
            echo 'Deployment failed! Rolling back to Blue...'
            sshagent(['blue-green-ssh1']) {
                sh """
                # Rollback: point traffic back to Blue server
                echo "Traffic switched back to Blue server (${BLUE_SERVER_IP}) ✅"
                # If using ELB, you can replace with aws elbv2 modify-listener commands
                """
            }
        }
    }
}
