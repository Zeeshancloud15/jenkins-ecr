pipeline {
    agent any

    environment {
        GREEN_SERVER_IP = "98.93.30.214"
        BLUE_SERVER_IP  = "54.242.239.106"
        APP_PATH        = "/var/www/html"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Zeeshancloud15/jenkins-ecr.git',
                    credentialsId: 'blue-green-ssh'
            }
        }

        stage('Deploy to Green') {
            steps {
                sshagent(['blue-green-ssh']) {
                    sh """
                        echo "Deploying to GREEN server..."
                        scp -o StrictHostKeyChecking=no ${WORKSPACE}/index.html jenkins@${GREEN_SERVER_IP}:${APP_PATH}/
                    """
                }
            }
        }

        stage('Health Check') {
            steps {
                script {
                    echo "Performing health check on GREEN server..."
                    def status = sh(script: "curl -s -o /dev/null -w '%{http_code}' http://${GREEN_SERVER_IP}/index.html", returnStdout: true).trim()
                    if (status != "200") {
                        error "Health check failed! HTTP status: ${status}"
                    } else {
                        echo "Health check passed!"
                    }
                }
            }
        }

        stage('Switch Traffic') {
            steps {
                echo "Switching traffic to GREEN..."
                // Add your load balancer / DNS switch commands here if needed
            }
        }

    }

    post {
        failure {
            echo "Deployment failed! Rolling back to BLUE..."
            sshagent(['blue-green-ssh']) {
                sh """
                    scp -o StrictHostKeyChecking=no ${WORKSPACE}/index.html jenkins@${BLUE_SERVER_IP}:${APP_PATH}/
                """
            }
        }
        always {
            echo "Cleaning up..."
        }
    }
}
