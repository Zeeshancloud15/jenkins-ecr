pipeline {
    agent any
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Zeeshancloud15/jenkins-ecr.git'
            }
        }

        stage('Deploy to Green') {
            steps {
                sshagent(['blue-green-ssh']) {
                    sh """
                    scp -o StrictHostKeyChecking=no index.html jenkins@<GREEN_SERVER_IP>:/var/www/html/
                    ssh -o StrictHostKeyChecking=no jenkins@<GREEN_SERVER_IP> 'sudo systemctl restart httpd'
                    """
                }
            }
        }

        stage('Health Check') {
            steps {
                sh "curl -I http://<GREEN_SERVER_IP> || exit 1"
            }
        }

        stage('Switch Traffic') {
            steps {
                sh """
                aws elbv2 modify-listener \
                --listener-arn <YOUR_VALID_LISTENER_ARN> \
                --default-actions Type=forward,TargetGroupArn=<GREEN_TARGET_GROUP>
                """
            }
        }
    }

    post {
        failure {
            echo 'Deployment failed! Rolling back to Blue...'
            sh """
            aws elbv2 modify-listener \
            --listener-arn <YOUR_VALID_LISTENER_ARN> \
            --default-actions Type=forward,TargetGroupArn=<BLUE_TARGET_GROUP>
            """
        }
    }
}
